{
    "apiVersion": 3,
    "name": "pmh/wave-container",
    "version": "1.0.0",
    "title": "Wave Container",
    "category": "design",
    "icon": "tide",
    "description": "A container block with a wavy bottom edge.",
    "keywords": [ "wave", "container", "section" ],
    "supports": {
        "html": false,
        "align": [ "wide", "full" ],
        "color": {
            "background": true,
            "text": true,
            "gradients": true
        },
        "spacing": {
            "padding": true,
            "margin": true
        }
    },
    "attributes": {
        "style": {
            "type": "object",
            "default": {
                "color": {
                    "background": "#20B2AA"
                }
            }
        },
        "minHeight": {
            "type": "string",
            "default": "40vh"
        },
        "waveColor": {
            "type": "string",
            "default": "#FFF5EE"
        },
        "waveHeight": {
            "type": "string",
            "default": "130px"
        },
        "wavePosition": {
            "type": "string",
            "default": "bottom"
        }
    },
    "editorScript": "file:./index.js",
    "editorStyle": "file:./editor.css",
    "style": "file:./style.css"
}
